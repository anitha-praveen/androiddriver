<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/rl_faq_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_faq_question"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/faq_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text=""
            android:textColor="@color/clr_333333"
            android:textSize="@dimen/_9sdp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/faq_question_indicator"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_down_arrow_white"
            app:tint="@color/clr_E7E7E7" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_faq_ans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clr_F6F2F2"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp">

        <TextView
            android:id="@+id/faq_ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text=""
            android:textColor="@color/clr_555555"
            android:textSize="@dimen/_9sdp" />

    </RelativeLayout>

</LinearLayout>