<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/_20sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/get_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/dialog_title"
            android:textColor="@color/clr_222B45"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:id="@+id/imageOptimize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/nice_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/txt_permission_background_mi"
            android:textColor="@color/clr_222B45"
            android:textSize="@dimen/_16sdp"
            android:gravity="center" />

        <Button
            android:id="@+id/logout_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/curved_line_primary_border"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/text_ok"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            app:backgroundTint="@null" />

    </LinearLayout>
</androidx.cardview.widget.CardView>

