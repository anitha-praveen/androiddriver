<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle" >
            <solid android:color="@color/clr_transparent" />
            <stroke android:color="@color/colorPrimary" android:width="@dimen/_1sdp" />
            <corners android:radius="@dimen/_4sdp" />
        </shape>
    </item>

    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/clr_F5F5F5" />
            <stroke android:color="@color/colorPrimary" android:width="@dimen/_1sdp" />
            <corners android:radius="@dimen/_4sdp" />
        </shape>
    </item>

    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/clr_F5F5F5" />
            <stroke android:color="@color/colorPrimary" android:width="@dimen/_1sdp" />
            <corners android:radius="@dimen/_4sdp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle" >
            <solid android:color="@color/clr_D5BEBD" />
            <stroke android:color="@color/clr_D5BEBD" android:width="@dimen/_1sdp" />
            <corners android:radius="@dimen/_4sdp" />
        </shape>
    </item>

</selector>